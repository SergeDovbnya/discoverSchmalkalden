<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hikingIconView"
        android:layout_width="112dp"
        android:layout_height="142dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:contentDescription="hiking_icon"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hike" />

    <ImageView
        android:id="@+id/foodIconView"
        android:layout_width="112dp"
        android:layout_height="142dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/food" />

    <ImageView
        android:id="@+id/eventIconView"
        android:layout_width="112dp"
        android:layout_height="142dp"
        android:layout_marginTop="140dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/foodIconView"
        app:layout_constraintStart_toEndOf="@+id/hikingIconView"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/events" />

    <ImageView
        android:id="@+id/schmalkaldenLogo"
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search" />

    <ImageView
        android:id="@+id/recommendedPlaceIcon"
        android:layout_width="213dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recommended_places" />

    <ImageView
        android:id="@+id/recommendedPlace2"
        android:layout_width="360dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommendedPlace1"
        app:srcCompat="@drawable/recommendedplace2" />

    <ImageView
        android:id="@+id/recommendedPlace1"
        android:layout_width="360dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommendedPlaceIcon"
        app:srcCompat="@drawable/recommendedplace1" />

    <ImageView
        android:id="@+id/recommendedPlace3"
        android:layout_width="360dp"
        android:layout_height="132dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommendedPlace2"
        app:srcCompat="@drawable/recommendedplace3" />

    <ImageView
        android:id="@+id/categoryIcon"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/category" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="112dp"
        android:layout_height="142dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hike" />

</androidx.constraintlayout.widget.ConstraintLayout>